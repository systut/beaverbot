<launch>
  <param name="/use_sim_time" value="false" />
<!-- <arg name="base_frame" default="base_link"/>
<arg name="odom_frame" default="base_link`"/> -->
<!-- Start RPLIDAR sensor node which provides LaserScan data  -->
  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find beaverbot_cartographer)/configuration_files
          -configuration_basename pure_localization.lua
          -load_state_filename $(find beaverbot_cartographer)/maps/map.pbstream"
      output="screen">
      <remap from="scan" to="scan_filtered" />
  </node>

  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05" />
 <!-- <node name="rviz" pkg="rviz" type="rviz" required="true"
      args="-d $(find beaverbot_cartographer)/configuration_files/demo_2d.rviz" /> -->
</launch>
